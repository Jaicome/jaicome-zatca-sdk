{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,

    "outDir": "lib"
  },

  "include": ["packages/examples/**/*"]
}

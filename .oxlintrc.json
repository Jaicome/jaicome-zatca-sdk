{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "ignorePatterns": [
    "test/**",
    "__tests__/**",
    "**/__tests__/**",
    "*.test.ts",
    "*.test.tsx",
    ".agents/**",
    "packages/examples/**",
    "packages/docs/**"
  ],
  "rules": {
    "eslint-plugin-import/no-relative-parent-imports": "off",
    "eslint-plugin-jsdoc/require-param-type": "off",
    "eslint-plugin-jsdoc/require-returns-type": "off",
    "@typescript-eslint/no-inferrable-types": "off",
    "eslint/max-statements": "off",
    "eslint/prefer-destructuring": "off",
    "eslint/no-plusplus": "off",
    "eslint/no-prototype-builtins": "off",
    "eslint/no-nested-ternary": "off",
    "eslint/no-negated-condition": "off",
    "eslint/no-empty-function": "off",
    "eslint/no-unexpected-multiline": "off",
    "eslint-plugin-import/no-nodejs-modules": "off",
    "eslint-plugin-jsdoc/require-param-description": "off",
    "@typescript-eslint/parameter-properties": "off",
    "eslint/no-use-before-define": "off",
    "eslint/class-methods-use-this": "off",
    "eslint/no-lonely-if": "off",
    "eslint/no-param-reassign": "off",
    "eslint/guard-for-in": "off",
    "eslint/prefer-const": "warn",
    "eslint/prefer-template": "warn",
    "eslint/require-await": "warn",
    "oxc/no-barrel-file": "off",
    "eslint-plugin-unicorn/prefer-ternary": "off",
    "eslint-plugin-unicorn/prefer-spread": "off",
    "eslint-plugin-unicorn/consistent-function-scoping": "off",
    "eslint-plugin-promise/avoid-new": "off",
    "eslint-plugin-import/no-named-as-default": "off",
    "eslint/max-classes-per-file": "off",
    "eslint-plugin-unicorn/no-nested-ternary": "off",
    "eslint/sort-keys": "off"
  },
  "extends": ["./node_modules/ultracite/config/oxlint/core/.oxlintrc.json"]
}
